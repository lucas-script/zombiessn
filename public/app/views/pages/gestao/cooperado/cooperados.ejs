<div layout="column">
    <br>
    <md-toolbar class="md-hue-2">
        <div class="md-toolbar-tools">
            <h3><span>Cooperados</span></h3>
        </div>
    </md-toolbar>
    <md-content flex layout-padding>
        <md-button ng-click="create()" class="md-raised md-primary">Novo cooperado</md-button>
        <table datatable="ng" class="row-border hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>RG</th>
                    <th>Data Ingresso</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="c in cooperados">
                    <td>{{c.nome}}</td>
                    <td>{{c.cpf}}</td>
                    <td>{{c.rg}}</td>
                    <td>{{c.dataIngresso}}</td>
                    <td>
                        <md-button ng-click="show(c._id)">Visualizar</md-button>
                        <md-button ng-click="edit(c._id)">Editar</md-button>
                        <md-button ng-click="delete(c._id)">Remover</md-button>
                    </td>
                </tr>
            </tbody>
        </table>          
    </md-content>
</div>