<div layout="column">
    <br>
    <md-toolbar class="md-hue-2">
        <div class="md-toolbar-tools">
            <h3><span>Cooperativas</span></h3>
        </div>
    </md-toolbar>
    <md-content flex layout-padding>
        <md-button ng-click="create()" class="md-raised md-primary">Nova cooperativa</md-button>
        <table datatable="ng" class="row-border hover">
            <thead>
                <tr>
                    <th>Nome Fantasia</th>
                    <th>Raz√£o Social</th>
                    <th>CNPJ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="c in cooperativas">
                    <td>{{c.nomeFantasia}}</td>
                    <td>{{c.razaoSocial}}</td>
                    <td>{{c.cnpj}}</td>
                    <td>
                        <md-button ng-click="show(c._id)">Visualizar</md-button>
                        <md-button ng-click="edit(c._id)">Editar</md-button>
                        <md-button ng-click="delete(c._id)">Remover</md-button>
                    </td>
                </tr>
            </tbody>
        </table>          
    </md-content>
</div>