<div layout="column">
    <br>
    <md-toolbar class="md-hue-2">
        <div class="md-toolbar-tools">
            <h3><span>Usuários</span></h3>
        </div>
    </md-toolbar>
    <md-content flex layout-padding>
        <md-button ng-click="create()" class="md-raised md-primary">Novo usuário</md-button>
        <table datatable="ng" class="row-border hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Email</th>
                    <th>Data de Nascimento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="u in usuarios">
                    <td>{{u.nome}}</td>
                    <td>{{u.cpf}}</td>
                    <td>{{u.email}}</td>
                    <td>{{u.dataNascimento | date:'dd/MM/yyyy'}}</td>
                    <td>
                        <md-button ng-click="show(u._id)">Visualizar</md-button>
                        <md-button ng-click="edit(u._id)">Editar</md-button>
                        <md-button ng-click="changePassword(u._id)">Alterar Senha</md-button>
                        <md-button ng-click="delete(u._id)">Remover</md-button>
                    </td>
                </tr>
            </tbody>
        </table>          
    </md-content>
</div>