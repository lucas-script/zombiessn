<div layout="column" layout-align="center center"  layout-fill>
    <div class="loginBox md-whiteframe-z1" layout="column">
        <md-toolbar>
            <h2 class="md-toolbar-tools">
                <span>Login</span>
            </h2>
        </md-toolbar>
        <md-content class="md-padding" layout="column">
            <form name="loginForm" ng-submit="autenticar()" novalidate>
                
                <h4>Email</h4>
                <md-input-container md-no-float class="md-block">
                    <input aria-label="email" type="email" name="email" ng-model="login.email" required class="stretch" ng-pattern="/^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i">
                    <div ng-messages="loginForm.email.$error" role="alert" multiple>
                        <div ng-message="required" class="my-message">Campo Obrigatório</div>
                        <div ng-message="pattern" class="my-message">Digite um email válido</div>
                    </div>
                </md-input-container>
                
                <h4>Senha</h4>
                <md-input-container md-no-float class="md-block">
                    <input aria-label="senha" type="password" name="senha" ng-model="login.senha" required class="stretch">
                    <div ng-messages="loginForm.senha.$error" role="alert" multiple>
                        <div ng-message="required" class="my-message">Campo Obrigatório</div>
                    </div>
                </md-input-container>
                
                <div layout="column" ng-if="loading" layout-align="center center">
                    <md-progress-circular md-mode="indeterminate"></md-progress-circular>
                </div>
                
                <div layout="row" layout-align="center center" style="padding-top:20px">
                    <md-button type="submit" ng-disabled="loginForm.$invalid || loading" class="md-raised md-primary"> Login</md-button>
                    <div flex></div>
                    <md-button href="" md-no-ink>Esqueci a senha</md-button>
                </div>
            </form>
        </md-content>
    </div>
</div>